<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BucketBuds" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/powder_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lavender</item>
        <item name="colorSecondaryVariant">@color/grape</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/cadet_blue</item>
        <item name="android:textColorSecondary">@color/powder_blue</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/powder_blue</item>
        <item name="android:textColorPrimary">@color/grape</item>
        <item name="android:textColor">@color/cadet_blue</item>
        <item name="colorOnPrimary">@color/grape</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="DialogAnimationCorner">
        <item name="android:windowEnterAnimation">@anim/from_right_top</item>
        <item name="android:windowExitAnimation">@anim/to_right_top</item>
    </style>

</resources>