<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tvTitleFAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingRight="150dp"
            android:paddingBottom="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/grape"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Snuggle with Fiona" />

        <TextView
            android:id="@+id/tvDescriptionFAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="@string/description" />

        <TextView
            android:id="@+id/tvLocationFAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="@string/location" />

        <TextView
            android:id="@+id/tvWebsiteFAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="@string/website" />

        <Switch
            android:id="@+id/swAllDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Day"
            android:textSize="16sp"
            android:thumbTint="@color/white"
            android:trackTint="@color/cadet_blue" />

        <TextView
            android:id="@+id/tvStartDateFAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="start date" />

        <TextView
            android:id="@+id/tvEndDateFAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="end date" />

        <Button
            android:id="@+id/btnCalendarEventFAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_calendar_event"
            android:textColor="@color/grape" />

        <TextView
            android:id="@+id/tvCalStatusFAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="Event already created" />

    </LinearLayout>

    <Button
        android:id="@+id/btnDeleteActivityFAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/powder_blue"
        android:text="@string/delete_activity"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/ivEditActivityFAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:text="@string/edit_activity_info"
        android:textColor="@color/black"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/ivSetDatesFAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/ivEditActivityFAD"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:textColor="@color/black" />
</RelativeLayout>