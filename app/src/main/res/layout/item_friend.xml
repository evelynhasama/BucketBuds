<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tvFriendCountIF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBucketCountIF"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/imageView3"
                android:textColor="@color/black"
                tools:text="12" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/ivRemoveFriendIF"
                card_view:srcCompat="@drawable/person_icon"
                card_view:tint="@color/black" />

            <TextView
                android:id="@+id/tvLastNameIF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvFirstNameIF"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Lee" />

            <ImageView
                android:id="@+id/ivProfileImageIF"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvFirstNameIF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/ivProfileImageIF"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Ryan" />

            <TextView
                android:id="@+id/tvUsernameIF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFirstNameIF"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/ivProfileImageIF"
                android:ellipsize="end"
                android:textSize="16sp"
                tools:text="someone" />

            <ImageView
                android:id="@+id/ivRemoveFriendIF"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                card_view:srcCompat="@drawable/ic_person_remove"
                card_view:tint="@color/grape" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/ivRemoveFriendIF"
                card_view:srcCompat="@drawable/bucket_icon"
                card_view:tint="@color/black" />

            <TextView
                android:id="@+id/tvBucketCountIF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/imageView2"
                android:textColor="@color/black"
                tools:text="12" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>